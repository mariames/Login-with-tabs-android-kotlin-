<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/orange</item>
    </style>

    <style name="LoginEditText" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textColorHint">@color/orange</item>
        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
</style>

    <style name="EditTextLayoutStyle" parent="Theme.AppCompat">
        <item name="android:paddingTop">10sp</item>
        <item name="android:paddingLeft">30sp</item>
        <item name="android:paddingRight">30sp</item>
    </style>

    <style name="CustomTabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabSelectedTextColor">@color/tab_selected</item>
        <item name="tabTextColor">@color/tab</item>
        <item name="tabIndicatorColor">@color/tab_selected</item>
        <item name="tabTextAppearance">@style/CustomTabTexStyle</item>
    </style>

    <style name="CustomTabTexStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/fields</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="RoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <!--<item name="colorButtonNormal">#FEBA6C</item>
        <item name="colorControlHighlight">#FC6D63</item>-->
        <item name="background">@drawable/gradient</item>
    </style>

</resources>
